<section class="section">
  <%= link_to "noteを書く" , new_note_path(@note_id), class: "button is-warning is-light" %>

    <div id="show_pagenate">
      <%= render "note_page" %>
    </div>

</section>
</div>
<% if @note.errors.any? %>
  <div class="notification is-danger">
    <h2>
      <%= pluralize(@note.errors.count, "error" ) %> prohibited this object from being saved: not successfully
    </h2>
    <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
        <% end %>
    </ul>
  </div>
  <% end %>

    <section class="section">
      <div class="container">
        <div class="columns is-centered">
          <div class="column is-6">
            <%= form_for @note do |f| %>
              <div class="field">
                <%= f.label :title, "タイトル" , class: "label" %>
                  <%= f.text_field :title, class: "input" %>
              </div>

              <div class="field">
                <%= f.label :body, "詳細" , class: "label" %>
                  <%= f.text_area :body, class: "textarea" %>
              </div>
              <%= f.hidden_field :book_id, :value=> @book_id %>

                <div class="field">
                  <%= f.label :note_image, "写真" , class: "label" %>
                    <%= f.file_field :note_image, class: "input" %>

                </div>

                <%= f.submit '投稿' , class: "button is-success" %>
                  <% end %>
          </div>
        </div>
      </div>
    </section>
